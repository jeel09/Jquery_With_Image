@model List<User>

<div class="card shadow border-0 mt-3  pb-3">
    <div class="card-header bg-secondary bg-gradient m-lg-1 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> User List</h2>
            </div>
        </div>
    </div>
    <div class=" card-body   p-5">
        <div class=" row">
            <div class=" col-12 text-end pb-3">
                <button class=" btn btn-dark" id="btnAdd">
                    <i class="bi bi-patch-plus"></i> Create New User
                </button>
            </div>
        </div>
        <div class=" container-fluid">
            <table id="tblDB" class=" table table-hover table-bordered px-5 " style="width:100%">
                <thead>
                    <tr>
                        <th>
                            User Id
                        </th>
                        <th>
                            First Name
                        </th>
                        <th>
                            Last Name
                        </th>
                        <th>
                            Address
                        </th>
                        <th>
                            Gender
                        </th>
                        <th>
                            Hobbies
                        </th>
                        <th>
                            Country Name
                        </th>
                        <th>
                            State Name
                        </th>
                        <th>
                            City Name
                        </th>
                        <th>
                            Image
                        </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody id="tblData"></tbody>
            </table>
            <div class=" modal fade modal" id="userModal">
                <div class=" modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="text-info modal-title" id="addUser">User</h2>
                            <button class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form method="post" id="countryForm">
                                <div class="form-group" id="cId">
                                    <label>Id</label>
                                    <input type="text" class="form-control" id="UserId" disabled="disabled" />
                                </div>
                                <div class="form-group mt-2">
                                    <label>First Name</label>
                                    <input type="text" class="form-control" id="FirstName" />
                                </div>
                                <div class="form-group mt-2">
                                    <label>Last Name</label>
                                    <input type="text" class="form-control" id="LastName" />
                                </div>
                                <div class="form-group mt-2">
                                    <label>Address</label>
                                    <textarea class="form-control" id="Address"></textarea>
                                </div>
                                <div class="form-group mt-2 pb-2">
                                    <label>Select Gender</label>
                                    <div id="gender"></div>
                                </div>

                                <div class="form-group mt-2 pb-2">
                                    <label>Select Hobby</label>
                                    <div id="hobby"></div>
                                </div>

                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select Country</label>
                                        <select class="form-control" id="country"></select>
                                    </div>
                                </div>
                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select State</label>
                                        <select class="form-control" id="state"></select>
                                    </div>
                                </div>
                                <div class="form-group pb-3">
                                    <div class="form-group pb-3">
                                        <label>Select City</label>
                                        <select class="form-control" id="city"></select>
                                    </div>
                                </div>
                                <div class="form-group mt-2">
                                    <label>Image</label>
                                    <input type="file" name="file" class="form-control" id="Image" />
                                    <div id="userImage" class="mt-3"></div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" onclick="AddUser();" id="AddData">Create</button>
                            <button class="btn btn-warning" onclick="UpdateUser();" style="display:none" id="UpdateData">Update</button>

                            <button class="btn btn-danger btn-default" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/user.js"></script>
}